---
import OgImageTemplate from '../components/OgImageTemplate.astro';
---

<html lang='en'>
	<head>
		<meta charset='utf-8' />
		<link rel='icon' type='image/svg+xml' href='/iwo-logo.svg' />
		<meta name='viewport' content='width=device-width' />
		<meta name='generator' content={Astro.generator} />
		<title>Astro</title>
	</head>
	<body>
		<OgImageTemplate />
	</body>
</html>

<style>
	html {
		width: 100vw;
		height: 100vh;
	}
	body {
		/* --primary-color: #c8a2c8;
		--secondary-color: #ffe7ff; */
		--primary-color: #c4adc9;
		--secondary-color: #f5f1e6;

		height: 100%;
		width: 100%;
		display: flex;
		justify-content: center;
		align-items: center;
		overflow: hidden;
		background: linear-gradient(
			180deg,
			var(--primary-color) -38.73%,
			var(--secondary-color) 86.35%
		);
	}
</style>
